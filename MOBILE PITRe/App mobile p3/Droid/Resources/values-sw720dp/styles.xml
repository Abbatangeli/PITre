<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="input_text_for_edittext" parent="input_text">
        <item name="android:layout_width">372dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="customadministrationview_style">
        <item name="android:layout_width">372dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="blue_button">
        <item name="fontPath">fonts/SourceSansPro-SemiBold.ttf</item>
        <item name="android:background">@drawable/selector_blue_button_background</item>
        <item name="android:layout_width">396dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="modale_title">
        <item name="fontPath">fonts/SourceSansPro-SemiBold.ttf</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/textDarkGrey</item>
    </style>

    <style name="details_page_label">
        <item name="fontPath">fonts/SourceSansPro-Bold.ttf</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textDarkGrey</item>
    </style>

    <style name="list_document_name">
        <item name="fontPath">fonts/SourceSansPro-Regular.ttf</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/textDarkGrey</item>
    </style>

    <style name="list_document_description">
        <item name="fontPath">fonts/SourceSansPro-SemiBold.ttf</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textDarkGrey</item>
    </style>

    <style name="list_sender">
        <item name="fontPath">fonts/SourceSansPro-Regular.ttf</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textDarkGrey</item>
    </style>

    <style name="list_icon_description">
        <item name="fontPath">fonts/SourceSansPro-Bold.ttf</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/iconDescription</item>
    </style>

    <style name="details_page_input">
        <item name="fontPath">fonts/SourceSansPro-Regular.ttf</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textDarkGrey</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="details_page_multiline_input">
        <item name="fontPath">fonts/SourceSansPro-Regular.ttf</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textDarkGrey</item>
        <item name="android:singleLine">false</item>
    </style>
    

    <style name="actiondialog_item" parent="link_to_page">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/margin_40px</item>
        <item name="android:paddingBottom">@dimen/margin_40px</item>
        <item name="android:textSize">22sp</item>
    </style>

</resources>
